# Solana RPC Node Configuration
# Edit these values to customize your node

# RPC Configuration
RPC_BIND=127.0.0.1
RPC_PORT=8899
DYNAMIC_PORT_RANGE=8000-8020

# Storage Paths
LEDGER_DIR=/mnt/ledger
ACCOUNTS_DIR=/mnt/accounts
SNAP_DIR=/mnt/ledger/snapshots

# Performance Settings
ENABLE_ACCOUNTS_DISK_INDEX=true
ACCOUNTS_INDEX_BINS=32
ACCOUNT_SHRINK_RATIO=0.8

# Network Configuration
ENABLE_GEYSER=false
GOSSIP_PORT=8001
TPU_PORT=8003
TPU_FWD_PORT=8004

# Known Validators (comma-separated, leave empty for auto)
KNOWN_VALIDATORS=""

# Expected Genesis Hash (leave empty for mainnet-beta default)
EXPECTED_GENESIS=""

# Identity Keypair Path
IDENTITY_KEYPAIR="/opt/solana/identity.json"

# Logging
RUST_LOG=info
RUST_BACKTRACE=1

# Memory Settings
SOLANA_METRICS_CONFIG=""

# Additional RPC flags
RPC_THREADS=32
RPC_NICENESS_ADJUSTMENT=-10

# Snapshot Configuration
FULL_SNAPSHOT_INTERVAL_SLOTS=25000
INCREMENTAL_SNAPSHOT_INTERVAL_SLOTS=100
MAXIMUM_FULL_SNAPSHOTS_TO_RETAIN=2
MAXIMUM_INCREMENTAL_SNAPSHOTS_TO_RETAIN=4

# Account Index Settings
ACCOUNTS_INDEX_SCAN_RESULTS_LIMIT=256
ACCOUNTS_DB_SKIP_SHRINK=false

# Jito Configuration (optional)
ENABLE_JITO=false
JITO_BLOCK_ENGINE_URL="https://frankfurt.mainnet.block-engine.jito.wtf"
JITO_RELAYER_URL="http://frankfurt.mainnet.relayer.jito.wtf:8100"
JITO_SHRED_RECEIVER_ADDR="145.40.93.84:1002"
JITO_AUTH_KEYPAIR=""
JITO_TIP_PAYMENT_PROGRAM_PUBKEY="T1pyyaTNZsKv2WcRAB8oVnk93mLJw2XzjtVYqCsaHqt"
JITO_TIP_DISTRIBUTION_PROGRAM_PUBKEY="4R3gSG8BpU4t19KYj8CfnbtRpnT8gtk4dvTHxVRwc2r7"

# Copy Trading Optimization
ENABLE_RPC_TRANSACTION_HISTORY=true
ENABLE_CPI_AND_LOG_STORAGE=true
RPC_SCAN_AND_FIX_ROOTS=true

# Health Check Settings
HEALTH_CHECK_SLOT_DISTANCE=150
MAX_DELINQUENT_STAKE=5

# Ledger Cleanup
LIMIT_LEDGER_SIZE=200000000
MAX_LEDGER_SHREDS=50000000

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
USE_SNAPSHOT_ARCHIVES_AT_STARTUP=when-newest