{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "legendary",
      "displayName": "LEGENDARY (MEV+ARB) Release Build",
      "description": "Ultra-optimized production build for MEV/ARB models",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GIT_SHA": "$env{GIT_SHA}",
        "DEFAULT_MEV_INNER_LIB": "/mnt/data/models/mev/libtreelite_compiled.so",
        "DEFAULT_MEV_CALIB": "/mnt/data/models/mev/calib.json",
        "DEFAULT_ARB_INNER_LIB": "/mnt/data/models/arb/libtreelite_compiled.so",
        "DEFAULT_ARB_CALIB": "/mnt/data/models/arb/calib.json",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_INSTALL_PREFIX": "/home/kidgordones/0solana/node/rust-services/shared/treelite"
      },
      "environment": {
        "CXXFLAGS": "-march=native -mtune=native",
        "LDFLAGS": "-Wl,-O3 -Wl,--as-needed"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with symbols for development",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GIT_SHA": "debug",
        "DEFAULT_MEV_INNER_LIB": "",
        "DEFAULT_MEV_CALIB": "",
        "DEFAULT_ARB_INNER_LIB": "",
        "DEFAULT_ARB_CALIB": ""
      }
    },
    {
      "name": "profile",
      "displayName": "Profile-Guided Optimization Build",
      "description": "PGO-enabled build for maximum performance",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-pgo",
      "inherits": "legendary",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native -fprofile-generate",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-fprofile-generate"
      }
    },
    {
      "name": "profile-use",
      "displayName": "PGO Use Build",
      "description": "Final build using PGO data",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-final",
      "inherits": "legendary",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native -fprofile-use=${sourceDir}/build-pgo/CMakeFiles",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-fprofile-use=${sourceDir}/build-pgo/CMakeFiles"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "legendary",
      "displayName": "LEGENDARY Build",
      "configurePreset": "legendary",
      "targets": ["mev_model", "arb_model"],
      "jobs": 8,
      "verbose": false
    },
    {
      "name": "legendary-verbose",
      "displayName": "LEGENDARY Build (Verbose)",
      "inherits": "legendary",
      "verbose": true
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug",
      "targets": ["all"],
      "jobs": 4
    },
    {
      "name": "mev-only",
      "displayName": "MEV Model Only",
      "configurePreset": "legendary",
      "targets": ["mev_model"],
      "jobs": 8
    },
    {
      "name": "arb-only",
      "displayName": "ARB Model Only",
      "configurePreset": "legendary",
      "targets": ["arb_model"],
      "jobs": 8
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Default Tests",
      "configurePreset": "legendary",
      "output": {
        "outputOnFailure": true
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "production",
      "displayName": "Production Workflow",
      "steps": [
        {
          "type": "configure",
          "name": "legendary"
        },
        {
          "type": "build",
          "name": "legendary"
        }
      ]
    },
    {
      "name": "pgo",
      "displayName": "Profile-Guided Optimization Workflow",
      "steps": [
        {
          "type": "configure",
          "name": "profile"
        },
        {
          "type": "build",
          "name": "legendary"
        },
        {
          "type": "configure",
          "name": "profile-use"
        },
        {
          "type": "build",
          "name": "legendary"
        }
      ]
    }
  ]
}