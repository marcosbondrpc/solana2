{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "backend/proto/defs/*.proto"],
  "pipeline": {
    "proto:generate": {
      "cache": false,
      "inputs": ["backend/proto/defs/*.proto"],
      "outputs": [
        "backend/proto/gen/**",
        "backend/libs/rust/proto/src/**",
        "frontend/packages/protobuf/src/*.ts"
      ]
    },
    "build": {
      "dependsOn": ["^build", "proto:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_*",
        "VITE_*",
        "NODE_ENV",
        "VERCEL_URL",
        "PORT",
        "CLICKHOUSE_HOST",
        "REDIS_URL",
        "KAFKA_BROKERS"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "VITE_*",
        "NODE_ENV",
        "PORT"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "bench": {
      "dependsOn": ["build"],
      "outputs": ["bench-results/**"]
    },
    "analyze": {
      "dependsOn": ["build"],
      "outputs": ["analyze/**"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    }
  }
}